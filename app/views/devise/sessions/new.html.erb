<h2 class="heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-div" >
  <div class="mb-3 col-sm-8">
    <%= f.label :email , class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email" %>
  </div>

  <div class="mb-3 col-sm-8">
    <%= f.label :password , class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:"form-control", id:"pwd"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 col-sm-8">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class:"form-label"%>
    </div>
  <% end %>

  <div class="mb-3 col-sm-2">
    <%= f.submit "Log in" , class:"btn btn-primary form-control"%>
  </div>
  </div>
<% end %>
<div class="form-div" >
<%= render "devise/shared/links" %>
</div>
