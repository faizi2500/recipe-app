<h1 class="heading"> All Foods</h1>

<div class="mb-3 col-sm-2 btn-div">
    <%= link_to "Add food", new_food_path, class:"btn btn-primary form-control" %>
</div>

<div class="listDiv">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th >Food</th>
        <th>Measurement_Unit</th>
        <th>Unit Price</th>
        <th>Action</th>
        </tr>
    </thead>

    <tbody>
    <% @foods.each do |food|%>
    <tr>
      <td><%= food.name%></th>
      <td><%= food.measurementUnit%></td>
      <td>$<%= food.price%></td>
      <td class="mb-3 col-sm-2">
      <%if can? :destroy, food%>
        <%=link_to "Delete", food_path(food.id), method: :delete, class:"btn btn-primary form-control"%>
      <%end%>
      </td>
    </tr>
    <% end %>
    </tbody>
</table>

</div>